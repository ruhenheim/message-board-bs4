<h1>id: <%= @message.id %> のメッセージ詳細ページ</h1>

<table class="table table-striped">
  <tr>
    <th>id</th>
    <td><%= @message.id %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @message.title %></td>
  </tr>
  <tr>
    <th>メッセージ</th>
    <td><%= @message.content %></td>
  </tr>
</table>

<%= link_to "編集する", edit_message_path(@message), class: 'btn btn-primary' %>
<%= link_to "削除する", @message, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
